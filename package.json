{
  "name": "semantic-release-lerna",
  "version": "0.5.0",
  "description": "semantic-release plugin to publish lerna monorepo packages to npm",
  "keywords": [
    "npm",
    "lerna",
    "publish",
    "registry",
    "semantic-release",
    "version"
  ],
  "homepage": "https://github.com/ext/semantic-release-lerna",
  "bugs": {
    "url": "https://github.com/ext/semantic-release-lerna/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ext/semantic-release-lerna"
  },
  "license": "MIT",
  "author": "David Sveningsson <ext@sidvind.com>",
  "contributors": [
    "Pierre Vanduynslager (https://twitter.com/@pvdlg_)",
    "Stephan BÃ¶nnemann <stephan@boennemann.me> (http://boennemann.me)",
    "Gregor Martynus (https://twitter.com/gr2m)"
  ],
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.mjs",
    "eslint": "eslint --cache .",
    "eslint:fix": "eslint --cache --fix .",
    "prepack": "release-prepack --bundle",
    "postpack": "release-postpack",
    "prepublishOnly": "release-prepublish --bundle",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "postpublish": "release-postpublish",
    "pretest": "npm run eslint && npm run prettier:check",
    "test": "jest --collectCoverage"
  },
  "prettier": "@html-validate/prettier-config",
  "jest": {
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "testTimeout": 30000,
    "transformIgnorePatterns": []
  },
  "dependencies": {
    "@semantic-release/error": "^4.0.0",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "aggregate-error": "5.0.0",
    "conventional-changelog-writer": "^7.0.0",
    "conventional-commits-filter": "^4.0.0",
    "conventional-commits-parser": "^5.0.0",
    "cosmiconfig": "^9.0.0",
    "detect-indent": "7.0.1",
    "execa": "8.0.1",
    "get-stream": "9.0.1",
    "globby": "^14.0.0",
    "into-stream": "8.0.1",
    "js-yaml": "^4.1.0",
    "libnpmversion": "^5.0.0",
    "minimatch": "9.0.4",
    "nerf-dart": "1.0.0",
    "normalize-url": "8.0.1",
    "npm-package-arg": "11.0.2",
    "p-map": "^7.0.0",
    "rc": "1.2.8",
    "read-package-up": "11.0.0",
    "registry-auth-token": "^5.0.0",
    "semver": "7.6.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.4",
    "@babel/preset-env": "7.24.4",
    "@html-validate/eslint-config": "5.18.0",
    "@html-validate/eslint-config-jest": "5.18.0",
    "@html-validate/prettier-config": "2.4.12",
    "@html-validate/release-scripts": "6.4.0",
    "@types/jest": "29.5.12",
    "@types/npmlog": "7.0.0",
    "babel-plugin-transform-import-meta": "2.2.1",
    "esbuild": "0.20.2",
    "fs-extra": "11.2.0",
    "jest": "29.7.0",
    "lerna": "8.1.2",
    "npm-pkg-lint": "2.4.1",
    "semantic-release": "23.0.8",
    "stream-buffers": "3.0.2",
    "verdaccio": "5.30.3"
  },
  "peerDependencies": {
    "lerna": "^5 || ^6 || ^7 || ^8",
    "semantic-release": "^22 || ^23"
  },
  "engines": {
    "node": ">= 18.17"
  },
  "publishConfig": {
    "access": "public"
  },
  "externalDependencies": [
    "@semantic-release/error",
    "@semantic-release/release-notes-generator",
    "conventional-changelog-writer",
    "conventional-commits-filter",
    "conventional-commits-parser",
    "cosmiconfig",
    "libnpmversion",
    "registry-auth-token"
  ],
  "renovate": {
    "extends": [
      "gitlab>html-validate/renovate-config"
    ],
    "packageRules": [
      {
        "matchPackageNames": [
          "lerna"
        ],
        "matchUpdateTypes": [
          "major"
        ],
        "commitMessageAction": "support",
        "commitMessageTopic": "{{depName}}",
        "commitMessageExtra": "v{{newMajor}}",
        "semanticCommitType": "feat"
      }
    ]
  }
}
